
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div class="container-fluid" ng-controller="IncentiveCtrl" ng-init="editInit()">
    <h3 class="mt-4">Edit Incentive</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card z-depth-3">
                <div class="card-body">
                    <div class="tab-content p-3">
                        <div class="tab-pane active" id="edit">
                            <form class="p-3">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label>Name</label>
                                        <input type="text" class="form-control" ng-model="Incentive.Name" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Type</label>
                                        <input type="text" class="form-control" ng-model="Incentive.Type" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Amount</label>
                                        <input type="number" min="0" class="form-control" ng-model="Incentive.Amount" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-success float-right" ng-click="EditIncentive(Incentive)">Edit Incentive</button>
                                        <a href="/Incentive/" title="Cancel" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/CardStyle.css" rel="stylesheet" />
