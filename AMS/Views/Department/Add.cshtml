@{
    ViewBag.Title = "Add";
}



<div class="container-fluid" ng-controller="DepartmentCtrl" ng-init="AddInit()">
    <h3 class="mt-4">Add Department</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card z-depth-3">
                <div class="card-body">
                    <div class="tab-content p-3">
                        <div class="tab-pane active" id="edit">
                            <form class="p-3">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label>Name</label>
                                        <input type="text" class="form-control" ng-model="Department.Name" />
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label>Description</label>
                                        <input type="text" class="form-control" ng-model="Department.Description" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-success float-right" ng-click="AddDepartment(Department)">Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>