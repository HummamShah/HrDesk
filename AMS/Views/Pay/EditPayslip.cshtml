
@{
    ViewBag.Title = "Edit Pay Slip";
}

<div class="container-fluid" ng-controller="PayCtrl" ng-init="EditPaySlipInit()">
    <h3 class="mt-4">Edit Department</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card z-depth-3">
                <div class="card-body">
                    <div class="tab-content p-3">
                        <div class="tab-pane active" id="edit">
                            <form class="p-3">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label>Date</label>
                                        <input type="date" class="form-control" ng-model="PaySlip.Date" />
                                    </div>
                          
                                    <div class="form-group col-md-4">
                                        <label>PaidBy</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.PadiBy" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>Days Worked</label>
                                        <input type="number" min="0" class="form-control" ng-model="PaySlip.DaysWorked" />
                                    </div>
                       
                                    <div class="form-group col-md-4">
                                        <label>Employee Code</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.EmpCode" />
                                    </div>
                           
                                    <div class="form-group col-md-4">
                                        <label>Employee Name</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.EmpName" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>Location</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.Location" />
                                    </div>
                          
                                    <div class="form-group col-md-4">
                                        <label>Designation</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.Designation" />
                                    </div>
                        
                                    <div class="form-group col-md-4">
                                        <label>Grade</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.Grade" />
                                    </div>
                      
                                    <div class="form-group col-md-4">
                                        <label>Date Of Joining</label>
                                        <input type="date" class="form-control" ng-model="PaySlip.DOJ" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>CNIC</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.CNIC" />
                                    </div>
                         
                                    <div class="form-group col-md-4">
                                        <label>Shift</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.Shift" />
                                    </div>
                           
                                    <div class="form-group col-md-4">
                                        <label>WWID</label>
                                        <input type="text" class="form-control" ng-model="PaySlip.WWID" />
                                    </div>
                         
                                    <div class="form-group col-md-4">
                                        <label>Basic Pay</label>
                                        <input type="number" ng-change="UpdatePay()" class="form-control" ng-model="PaySlip.BasicPay" />
                                    </div>
                    
                                    <div class="form-group col-md-4">
                                        <label>House Rent</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.HouseRent" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>Utility</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.Utility" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>Fuel Allowance</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.FuelAllowance" />
                                    </div>
                            
                                    <div class="form-group col-md-4">
                                        <label>Vehicle Allowance</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.VehicleAllowance" />
                                    </div>
                        
                                    <div class="form-group col-md-4">
                                        <label>Incentive</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.Incentive" />
                                    </div>
                           
                                    <div class="form-group col-md-4">
                                        <label>Tax</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.Tax" />
                                    </div>
                              
                                    <div class="form-group col-md-4">
                                        <label>EOBI</label>
                                        <input type="number"  ng-change="UpdatePay()"  min="0" class="form-control" ng-model="PaySlip.EOBI" />
                                    </div>
                        
                                    <div class="form-group col-md-4">
                                        <label>Gross Pay</label>
                                        <input readonly type="number" min="0" class="form-control" ng-model="PaySlip.GrossPay" />
                                    </div>
                        
                                    <div class="form-group col-md-4">
                                        <label>NET Pay</label>
                                        <input readonly type="number" min="0" class="form-control" ng-model="PaySlip.NetPay" />
                                    </div>
                        
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-success float-right" ng-click="EditPaySlip(PaySlip)">Save</button>
                                        <a href="/Pay/PaySlipList" title="Cancel" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

