<div class="container-fluid" ng-controller="AgentAttendanceCtrl" ng-init="initIndex()">
    <div class="row">
        <div class="col-md-3">
            <h2>Attendance List</h2>
        </div>
        <div class="col-md-9">
            <div class="form-group col-md-5 float-right">
                <div class="">
                    <label>Date From</label>
                    <input type="date" class="form-control" ng-model="DateFrom" />
                </div>
                <div class="">
                    <label>Date To</label>
                    <input type="date" class="form-control" ng-model="DateTo" />
                </div>
                <button style="margin-top:20px" class="btn btn-primary" ng-click="GetAttendance(DateFrom,DateTo)">Get</button>
            </div>
        </div>
    </div>


    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Daily Agent Attendance
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-md" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="overflow:hidden;">
                            <th width="40%">
                                Agent <a href="" class="sort-icon" ng-click="SetSortingColoumn('AgentName')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            <th width="10%">
                                Status
                            </th>
                            <th width="10%">
                                Remarks
                            </th>
                            <th>
                                Marked At <a href="" class="sort-icon" ng-click="SetSortingColoumn('StartDateTime')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>

                            <th>
                                SignedOff At <a href="" class="sort-icon" ng-click="SetSortingColoumn('EndDateTime')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            @if (User.IsInRole(UserRoles.HR))
                            {
                                <th>
                                    Is Excused
                                </th>
                            }
                            <th>
                                Type  <a href="" class="sort-icon" ng-click="SetSortingColoumn('Type')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="Attendance in AttendanceList">
                            <td>
                                {{Attendance.AgentName}}
                            </td>
                            <td>
                                <span ng-if="Attendance.IsLate == true" style="color:red">Late</span>
                                <span ng-if="Attendance.IsPresent == true" style="color:darkgreen">On Time</span>
                                <span ng-if="Attendance.IsExcused == true" style="color:darkorange">Excused</span>
                                <span ng-if="Attendance.IsAbsent == true" style="color:black">Absent</span>
                            </td>
                            <td>
                                <span ng-if="Attendance.IsExcused == true">{{Attendance.Remarks}}</span>
                            </td>
                            <td>
                                {{Attendance.StartDateTime |  date:'MMM d, y hh:mm a'}}
                            </td>
                            <td>
                                {{Attendance.EndDateTime |  date:'MMM d, y hh:mm a'}}
                            </td>
                            @if (User.IsInRole(UserRoles.HR))
                            {
                                <td>
                                    <button class="bg-primary primary" ng-if="Attendance.IsLate == true" data-toggle="modal" data-target="#markExcuseModal" ng-click="SaveExcusedAgent(Attendance)"><i class="fas fa-ban"></i></button>
                                </td>
                            }
                            <td ng-if="Attendance.Type == 0">
                                {{Attendance.TypeEnum}}
                            </td>
                            <td ng-if="Attendance.Type == 1">
                                <a href="http://maps.google.com/?q={{Attendance.Latitude}},{{Attendance.Longitude}}" target="_blank">{{Attendance.TypeEnum}}</a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div id="markExcuseModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Mark Excused
                    </h4>
                </div>
                <div>
                    <label class=""> Remarks </label>
                    <input class="" type="text" ng-model="ExcusedAgentRemarks" />
                </div>
                <div class="modal-body">
                    <h5 class="text-center">Are you sure?</h5>
                </div>
                <div class="modal-footer">
                    <div class="btn btn-danger" data-dismiss="modal">
                        No
                    </div>
                    <div class="btn btn-success" ng-click="MarkExcused(ExcusedAgentId, ExcusedAgentRemarks)" data-dismiss="modal">
                        Yes
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>