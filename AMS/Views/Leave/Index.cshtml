@using UserRoles = AMS.Models.Enums.Roles;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div class="container-fluid" ng-controller="LeaveCtrl" ng-init="initIndex()">
    <div class="row" style="margin-top: 20px;">
        @*<div class="col-xl-5 col-md-12 col-lg-12 barmt">
                <canvas id="bar" class="chart-bar"
                        chart-data="data" chart-labels="labels">
                    chart-series="series"
                </canvas>
            </div>*@
        <div class="col-xl-7 col-md-12 col-lg-12">
            <div class="card">
                <div>
                    <button class="btn btn-primary btn-block" ng-click="SaveExcusedAgent(Agent)" data-toggle="modal" data-target="#applyleaves">APPLY LEAVE</button>
                </div>
                <div class="card-header  border-0">
                    <h4 class="card-title">Leaves Summary for {{months[searchedMonth].name}} {{selectedYear}}</h4>
                </div>
                <div class="card-body pt-0 pb-3">
                    <div class="row mb-0 pb-0">
                        <div ng-if="!Summary.AttendanceIsEmpty">
                            <div class="col-md-1 col-xl-auto text-center py-3">
                                <h6 class="avatar avatar-md bradius fs-20 bg-primary-transparent">31</h6>
                                <h6 class="mb-0 mt-3"></h6>
                            </div>
                            <div class="col-md-1 col-xl-auto text-center py-3 ">
                                <h6 class="avatar avatar-md bradius fs-20 bg-success-transparent">24</h6>
                                <h6 class="mb-0 mt-3"></h6>
                            </div>
                            <div class="col-md-1 col-xl-auto text-center py-3">
                                <h6 class="avatar avatar-md bradius fs-20 bg-danger-transparent">2</h6>
                                <h6 class="mb-0 mt-3"></h6>
                            </div>
                            <div class="col-md-1 col-xl-auto text-center py-3">
                                <h6 class="avatar avatar-md bradius fs-20 bg-warning-transparent">0</h6>
                                <h6 class="mb-0 mt-3"></h6>
                            </div>
                            <div class="col-md-1 col-xl-auto text-center py-3 ">
                                <h6 class=" avatar avatar-md bradius fs-20 bg-orange-transparent">2</h6>
                                <h6 class="mb-0 mt-3"></h6>
                            </div>
                        </div>
                        <div ng-if="Summary.AttendanceIsEmpty">
                            There is no histroy for {{months[searchedMonth].name}} {{selectedYear}}
                        </div>
                        <div style="width:15%;float:right;margin-left:5px;">
                            <select ng-model="selectedMonth">
                                <option ng-repeat="month in months" value={{month.id}} ng-selected="month.id == selectedMonth">{{month.name}}</option>
                            </select>
                        </div>
                        <div style="width:15%;float:right;margin-left:5px;">
                            <select ng-model="selectedYear">
                                <option ng-repeat="year in years" value={{year}} ng-selected="year == selectedYear">{{year}}</option>
                            </select>
                        </div>
                        <div>
                            <button class="btn btn-primary btn-block" ng-click="GetSummary(selectedYear, selectedMonth)">GET SUMMARY</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-md-12 col-lg-12">
            <div class="card" style="margin-top: 10px;">
                <div class="card-header  border-0">
                    <h4 class="card-title">Leaves Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <table class="table table-bordered table-responsive-xs" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr style="overflow:hidden;">
                                    <th>
                                        From <a href="" class="sort-icon" ng-click="SetSortingColoumn('From')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        To <a href="" class="sort-icon" ng-click="SetSortingColoumn('To')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        Status <a href="" class="sort-icon" ng-click="SetSortingColoumn('Status')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        Apply Date <a href="" class="sort-icon" ng-click="SetSortingColoumn('Apply Date')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        Accepted/Rejected Date <a href="" class="sort-icon" ng-click="SetSortingColoumn('Accepted/Rejected Date')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        Type <a href="" class="sort-icon" ng-click="SetSortingColoumn('Type')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                    <th>
                                        Reason <a href="" class="sort-icon" ng-click="SetSortingColoumn('Reason')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Leave in LeavesList| orderBy:Sorting.Field:Sorting.IsAscending">
                                    <td>
                                        {{Leave.LeaveFrom}}
                                    </td>
                                    <td>
                                        {{Leave.LeaveTo}}
                                    </td>
                                    <td>
                                        {{Leave.Status}}
                                    </td>
                                    <td>
                                        {{Leave.ApplyDate}}
                                    </td>
                                    <td>
                                        {{Leave.AccpRejDate}}
                                    </td>
                                    <td>
                                        {{Leave.TypeEnum}}
                                    </td>
                                    <td>
                                        {{Leave.Reason}}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* ========================================================= APPLY LEAVE MODAL ================================================ *@
    <div class="modal fade" id="applyleaves">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Apply Leaves</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="leave-types">
                        <div class="form-group">
                            <label class="form-label">Leaves Dates</label>
                            <select name="projects" class="form-control custom-select select2" id="daterange-categories">
                                <option value="single">Single Leave</option>
                                <option value="multiple">Multiple Leaves</option>
                            </select>
                        </div>
                        <div class="leave-content active" id="single">
                            <div class="form-group">
                                <label class="form-label">Date Range:</label>
                                <div class="input-group">
                                    <input type="date" name="singledaterange" class="form-control" placeholder="select dates" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="bx bx-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="leave-content" id="multiple">
                            <div class="form-group">
                                <label class="form-label">Date Range:</label>
                                <div class="input-group">
                                    <input type="date" name="daterange" class="form-control" placeholder="select dates" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="bx bx-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Leaves Types</label>
                            <select name="projects" class="form-control custom-select select2" data-placeholder="Select">
                                <option label="select"></option>
                                <option value="1">Half Day Leave</option>
                                <option value="2">Casual Leaves</option>
                                <option value="3">Sick Leaves</option>
                                <option value="4">Maternity Leaves</option>
                                <option value="5">Paternity Leaves</option>
                                <option value="6">Annual Leaves</option>
                                <option value="6">Unpaid Leaves</option>
                                <option value="8">Other Leaves</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Reason:</label>
                            <textarea class="form-control" rows="5">Some text here...</textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="">
                        <label class="mb-0 font-weight-semibold">Selected Days:</label>
                        <span class="badge badge-danger badge-pill ml-2">2</span>
                    </div>
                    <div class="ml-auto">
                        <a href="#" class="btn btn-outline-primary" data-dismiss="modal">Close</a>
                        <a href="#" class="btn btn-primary">Submit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

