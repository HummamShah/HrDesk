@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/CardStyle.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/css/normalize.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/demo.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/tabs.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/tabstyles.css" />

<div class="container-fluid" ng-controller="UserCtrl" ng-init="EditInit()">
    <h3 class="mt-4">Edit User</h3>
    <section>
        <div class="tabs tabs-style-tzoid">
            <nav>
                <ul>
                    <li><a href="#section-tzoid-1"><span>Profile</span></a></li>
                    <li><a href="#section-tzoid-2"><span>Upload</span></a></li>
                    @*<li><a href="#section-tzoid-3" class="icon icon-upload"><span>Upload</span></a></li>
                        <li><a href="#section-tzoid-4" class="icon icon-display"><span>Analytics</span></a></li>
                        <li><a href="#section-tzoid-5" class="icon icon-tools"><span>Settings</span></a></li>*@
                </ul>
            </nav>
            <div class="content-wrap">
                <section id="section-tzoid-1">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card z-depth-3">
                                <div class="card-body">
                                    <div class="tab-content p-3">
                                        <div class="tab-pane active" id="edit">
                                            <form class="p-3">
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <label>First Name</label>
                                                        <input type="text" class="form-control" ng-model="User.FirstName" />
                                                    </div>

                                                    <div class="form-group col-md-3">
                                                        <label>Last Name</label>
                                                        <input type="text" class="form-control" ng-model="User.LastName" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Address</label>
                                                        <input type="text" class="form-control" ng-model="User.Address" />
                                                    </div>

                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <label>Primary Contact</label>
                                                        <input type="text" class="form-control" ng-model="User.Contact1" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Alternate Contact</label>
                                                        <input type="text" class="form-control" ng-model="User.Contact2" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Email</label>
                                                        <input type="email" class="form-control" ng-model="User.Email" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <label>Remaining Leaves</label>
                                                        <input type="number" class="form-control" min="0" max="30" value="30" onkeydown="return false" ng-model="User.RemainingLeaves" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Annual Leaves</label>
                                                        <input type="number" class="form-control" min="0" max="20" value="20" onkeydown="return false" ng-model="User.AnnualLeaves" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Medical Leaves</label>
                                                        <input type="number" class="form-control" min="0" max="10" value="10" onkeydown="return false" ng-model="User.MedicalLeaves" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <div class="">
                                                            <label>Department</label>
                                                            <select ng-model="User.DepartmentId" class="form-control" ng-change="GetUsersByDepartmentId(User.DepartmentId)">
                                                                <option selected value="">Select Department</option>
                                                                <option ng-repeat="Department in Departments" ng-selected="Department.Id == User.DepartmentId" value="{{Department.Id}}">{{Department.Name}}</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <div class="">
                                                            <label>Shift</label>
                                                            <select ng-model="User.ShiftId" class="form-control">
                                                                @*ng-change="GetUsersByDepartmentId(User.DepartmentId)">*@
                                                                <option selected value="">Select Shift</option>
                                                                <option ng-repeat="Shift in ShiftsList" ng-selected="Shift.Id == User.ShiftId" value="{{Shift.Id}}">{{Shift.Name}}</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group col-md-3" style="margin-top: 42px;">
                                                        <label>Has Supervisor</label>
                                                        <input type="checkbox" class="" ng-model="User.HasSupervisor" ng-change="CheckForDepartment(User.DepartmentId)" />
                                                    </div>
                                                    <div class="form-group col-md-3" ng-if="User.HasSupervisor">
                                                        <label>Supervisor</label>
                                                        <select ng-model="User.SupervisorId" class="form-control">
                                                            <option selected value="">Select Supervisor</option>
                                                            <option ng-repeat="Supervisor in Supervisors" value="{{Supervisor.Id}}">{{Supervisor.Name}}</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <label>Password</label>
                                                        <input type="password" class="form-control" ng-model="User.Password" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label>Confirm Password</label>
                                                        <input type="password" class="form-control" ng-model="User.ConfirmPassword" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-3">
                                                        <label>Salary</label>
                                                        <input type="number" class="form-control" min="0" ng-model="User.Salary" />
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <div class="">
                                                            <label>Taxes</label>
                                                            <ui-select multiple sortable="true" ng-model="User.Taxes" theme="select2" class="form-control" title="Choose a person">
                                                                <ui-select-match placeholder="Select or search a tax in the list...">{{Tax.Name}}</ui-select-match>
                                                                <ui-select-choices repeat="Tax in TaxesList | filter: $select.search">
                                                                    <div ng-bind-html="Tax.Name | highlight: $select.search"></div>
                                                                </ui-select-choices>
                                                            </ui-select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <div class="">
                                                            <label>Incentives</label>
                                                            <ui-select multiple sortable="true" ng-model="User.Incentives" theme="select2" class="form-control" title="Choose a person">
                                                                <ui-select-match placeholder="Select or search a tax in the list...">{{Incentive.Name}}</ui-select-match>
                                                                <ui-select-choices repeat="Incentive in IntensivesList | filter: $select.search">
                                                                    <div ng-bind-html="Incentive.Name | highlight: $select.search"></div>
                                                                </ui-select-choices>
                                                            </ui-select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <label>Profile Photo</label>
                                                        <input type="file" accept="image/*" ngf-select="UploadUserImage($files,'ImageUrl')" class="form-control" />
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </section>
                <section id="section-tzoid-2">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card z-depth-3">
                                <div class="card-body">
                                    <div class="tab-content p-3">
                                        <div class="tab-pane active" id="edit">
                                            <form class="p-3">
                                                <div class="row">
                                                    <div class="form-group col-md-6 text-left">
                                                        
                                                        <div ng-repeat="doc in User.Docs" class="mt-4">
                                                            <div ng-if="doc.Url && doc.Url != ''">
                                                                <a ng-if="!doc.ChooseInput" href="{{doc.Url}}">{{doc.Title}} | {{doc.SubTitle}}</a>
                                                                <label ng-if="doc.ChooseInput">{{doc.Title}}</label>
                                                                <span>
                                                                    <a ng-if="doc.ChooseInput" href="" ng-click="DisableInputField(doc)">Undo   <i class="fas fa-times"></i></a>
                                                                    <input ng-if="doc.ChooseInput" type="file" ngf-select="UploadFile($files, doc.Title)" class="form-control" />

                                                                    <a ng-if="!doc.ChooseInput" href="" ng-click="EnableInputField(doc)"><i class="fas fa-pencil-alt"></i></a>
                                                                </span>
                                                                <span>
                                                                    <a ng-if="!doc.ChooseInput" href="" ng-click="RemoveUploadedFile(doc.Title)"><i class="fas fa-trash-alt"></i></a>
                                                                </span>
                                                            </div>
                                                            <div ng-if="!doc.Url || doc.Url == ''" >
                                                                <label>{{doc.Title}}</label>
                                                                <input type="file" ngf-select="UploadFile($files, doc.Title)" class="form-control" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                          
                                                <div class="row">
                                                    <div class="form-group col-md-6 text-left">
                                                        <label>Educational Documents</label>
                                                        <div ng-repeat="row in User.EducationalDocs">
                                                            <a ng-if="row.Url && row.Url != ''" href="{{row.Url}}" class="ml-3">{{row.SubTitle}}</a>

                                                            <input ng-if="!row.Url || row.Url == ''" type="file" ngf-select="UploadEducationalFile($files, 'Educational', $index)" class="form-control mt-3" />

                                                            <span>
                                                                <a ng-if="row.Url && row.Url != ''" href="" ng-click="RemoveUploadedEducationalFile($index)" class="ml-2"><i class="fas fa-trash-alt"></i></a>
                                                            </span>
                                                        </div>
                                                        <br />
                                                        <div class="col-md-7">
                                                            <button ng-click="AddEducationalDocRow()"><i class="fas fa-plus"></i> Add</button>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="form-group col-md-6 text-left">
                                                        <label>Certifications & Courses</label>

                                                        <div ng-repeat="row in User.Certificates">


                                                            <a ng-if="row.Url && row.Url != ''" href="{{row.Url}}" class="ml-3">{{row.SubTitle}}</a>
                                                            <input ng-if="!row.Url || row.Url == ''" type="file" ngf-select="UploadCertificate($files, 'Certifications', $index)" class="form-control mt-3" />

                                                            <span>
                                                                <a ng-if="row.Url && row.Url != ''" href="" ng-click="RemoveUploadedCertificate($index)" class="ml-2"><i class="fas fa-trash-alt"></i></a>
                                                            </span>
                                                        </div>
                                                        <br />
                                                        <div class="col-md-7">
                                                            <button ng-click="AddCertificateRow()"><i class="fas fa-plus"></i> Add</button>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <button type="button" class="btn btn-success float-right" ng-click="AddUser(User)">Edit User</button>
                                                        <a href="/User/" title="Cancel" class="btn btn-danger float-right">Cancel</a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="section-tzoid-3"><p>3</p></section>
                <section id="section-tzoid-4"><p>4</p></section>
                <section id="section-tzoid-5"><p>5</p></section>
            </div><!-- /content -->
        </div><!-- /tabs -->

    </section>


</div>

<script src="~/Content/js1/cbpFWTabs.js"></script>
<script>
    (function () {

        [].slice.call(document.querySelectorAll('.tabs')).forEach(function (el) {
            new CBPFWTabs(el);
        });

    })();
</script>
