@{ ViewBag.Title = "Edit";}<link href="~/Content/CardStyle.css" rel="stylesheet" /><link rel="stylesheet" type="text/css" href="~/Content/css/normalize.css" /><link rel="stylesheet" type="text/css" href="~/Content/css/demo.css" /><link rel="stylesheet" type="text/css" href="~/Content/css/tabs.css" /><link rel="stylesheet" type="text/css" href="~/Content/css/tabstyles.css" /><div class="container-fluid" ng-controller="UserCtrl" ng-init="EditInit()">    <h3 class="mt-4">Edit User</h3>    <section>        <div class="tabs tabs-style-tzoid">            <nav>                <ul>                    <li><a href="#section-tzoid-1"><span>Profile</span></a></li>                    <li><a href="#section-tzoid-2"><span>Upload</span></a></li>                </ul>            </nav>            <div class="content-wrap">                <section id="section-tzoid-1">                    <div class="row">                        <div class="col-lg-12">                            <div class="card z-depth-3">                                <div class="card-body">                                    <div class="tab-content p-3">                                        <div class="tab-pane active" id="edit">                                            <form class="p-3">                                                <div class="row">                                                    <div class="form-group col-md-3">                                                        <label>First Name</label>                                                        <input type="text" class="form-control" ng-model="User.FirstName" readonly />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Last Name</label>                                                        <input type="text" class="form-control" ng-model="User.LastName" readonly />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Email</label>                                                        <input type="email" class="form-control" ng-model="User.Email" readonly />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="required">Primary Contact</label>                                                        <input type="text" maxlength="11" ng-change="IsContactNumber1()" class="form-control" ng-model="User.Contact1" placeholder="11 digit number" />                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-3">                                                        <label>Alternate Contact</label>                                                        <input type="text" maxlength="11" ng-change="IsContactNumber2()" class="form-control" ng-model="User.Contact2" placeholder="11 digit number" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Address</label>                                                        <input type="text" class="form-control" ng-model="User.Address" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <div class="">                                                            <label class="required">Department</label>                                                            <select ng-model="User.DepartmentId" class="form-control" ng-change="GetPositionsByDepartmentId(User.DepartmentId)">                                                                <option disabled selected value="">Select Department</option>                                                                <option ng-repeat="Department in Departments" ng-selected="Department.Id == User.DepartmentId" value="{{Department.Id}}">{{Department.Name}}</option>                                                            </select>                                                        </div>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <div class="">                                                            <label>Position</label>                                                            <select ng-model="User.PositionName" class="form-control">                                                                <option disabled selected value="">Select Position</option>                                                                <option ng-repeat="Position in PositionDropDown" ng-selected="Position.PositionName == User.PositionName" value="{{Position}}">{{Position.PositionName}}</option>                                                            </select>                                                        </div>                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-3">                                                        <label class="required">Remaining Leaves</label>                                                        <input type="number" class="form-control" min="0" max="30" onkeydown="return false" ng-model="User.RemainingLeaves" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="required">Annual Leaves</label>                                                        <input type="number" class="form-control" min="0" max="20" onkeydown="return false" ng-model="User.AnnualLeaves" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="required">Medical Leaves</label>                                                        <input type="number" class="form-control" min="0" max="10" onkeydown="return false" ng-model="User.MedicalLeaves" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Deduction In Days</label>                                                        <input type="number" class="form-control" min="0" max="30" onkeydown="return false" ng-model="User.DeductionInDays" readonly />                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-3">                                                        <div class="">                                                            <label class="required">Shift</label>                                                            <select ng-model="User.ShiftId" class="form-control">                                                                <option disabled selected value="">Select Shift</option>                                                                <option ng-repeat="Shift in ShiftsList" ng-selected="Shift.Id == User.ShiftId" value="{{Shift.Id}}">{{Shift.Name}}</option>                                                            </select>                                                        </div>                                                    </div>                                                    <div class="form-group col-md-3" style="margin-top: 42px;">                                                        <label>Has Supervisor</label>                                                        <input type="checkbox" class="" ng-model="User.HasSupervisor" ng-change="CheckForDepartment(User.DepartmentId)" />                                                    </div>                                                    <div class="form-group col-md-3" ng-if="User.HasSupervisor">                                                        <label>Supervisor</label>                                                        <select ng-model="User.SupervisorId" class="form-control">                                                            <option selected value="">Select Supervisor</option>                                                            <option ng-repeat="Supervisor in Supervisors" value="{{Supervisor.Id}}">{{Supervisor.Name}}</option>                                                        </select>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Base Salary</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.Salary" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>House Rent Allowance</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.HouseRentAllowance" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Utility Allowance</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.Utility" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Vehicle Allowance</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.VehicleAllowance" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Fuel Allowance</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.FuelAllowance" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>EOBI Deduction</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.EOBIDeduction" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Loan Deduction</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.LoanDeduction" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Other Deduction</label>                                                        <input type="number" class="form-control" min="0" ng-model="User.OtherDeduction" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Other Load Des</label>                                                        <textarea class="form-control" ng-model="User.OtherDeductionDesc"></textarea>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>EmpCode</label>                                                        <input type="text" class="form-control" ng-model="User.EmpCode" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Location</label>                                                        <input type="text" class="form-control" ng-model="User.Location" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Section</label>                                                        <input type="text" class="form-control" ng-model="User.Section" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Grade</label>                                                        <input type="text" class="form-control" ng-model="User.Grade" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>DOJ</label>                                                        <input type="date" class="form-control" ng-model="User.DateOfJoining" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>WWID</label>                                                        <input type="text" class="form-control" ng-model="User.WWID" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>Permanent/Temporary</label>                                                        <input type="text" class="form-control" ng-model="User.EmployementType" />                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label>CNIC</label>                                                        <input type="text" class="form-control" ng-model="User.CNIC" />                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-3">                                                        <label class="col-12">Taxes</label>                                                        <ui-select multiple sortable="true" ng-model="User.Taxes" theme="select2" class="col-12" title="Choose a person">                                                            <ui-select-match placeholder="Select or search a tax in the list...">{{$item.Name}}</ui-select-match>                                                            <ui-select-choices repeat="Tax in (TaxesList | filter: $select.search) track by Tax.Id">                                                                <div ng-bind-html="Tax.Name | highlight: $select.search"></div>                                                            </ui-select-choices>                                                        </ui-select>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="col-12">Deductions</label>                                                        <ui-select multiple sortable="true" ng-model="User.Deductions" theme="select2" class="col-12" title="Choose a person">                                                            <ui-select-match placeholder="Select or search a Deduction in the list...">{{$item.Name}}</ui-select-match>                                                            <ui-select-choices repeat="Deduction in (DeductionsList | filter: $select.search) track by Deduction.Id">                                                                <div ng-bind-html="Deduction.Name | highlight: $select.search"></div>                                                            </ui-select-choices>                                                        </ui-select>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="col-12">Incentives</label>                                                        <ui-select multiple sortable="true" ng-model="User.Incentives" theme="select2" class="col-12" title="Choose a person">                                                            <ui-select-match placeholder="Select or search an incentive in the list...">{{$item.Name}}</ui-select-match>                                                            <ui-select-choices repeat="Incentive in (IncentivesList | filter: $select.search) track by Incentive.Id">                                                                <div ng-bind-html="Incentive.Name | highlight: $select.search"></div>                                                            </ui-select-choices>                                                        </ui-select>                                                    </div>                                                    <div class="form-group col-md-3">                                                        <label class="col-12"></label>                                                        <button type="button" class="btn btn-success float-right ml-3" ng-click="EditUser(User)">Edit User</button>                                                        <a href="" title="Cancel" class="btn btn-danger float-right" ng-click="ResetPassword(User.Email)">Reset Password</a>                                                    </div>                                                    </div></form>                                        </div>                                    </div>                                </div>                            </div>                        </div>                    </div>                </section>                <section id="section-tzoid-2">                    <div class="row">                        <div class="col-lg-12">                            <div class="card z-depth-3">                                <div class="card-body">                                    <div class="tab-content p-3">                                        <div class="tab-pane active" id="edit">                                            <form class="p-3">                                                <div class="row">                                                    <div class="form-group col-md-6 text-left">                                                        <div ng-repeat="doc in User.Docs" class="mt-4">                                                            <div ng-if="doc.Url && doc.Url != ''">                                                                <span ng-if="!doc.ChooseInput">{{doc.Title}} | <a href="{{doc.Url}}" target="_blank"> {{doc.SubTitle}} </a></span>                                                                <label ng-if="doc.ChooseInput">{{doc.Title}}</label>                                                                <span>                                                                    <a target="_blank" ng-if="doc.ChooseInput" href="" ng-click="DisableInputField(doc)">Undo   <i class="fas fa-times"></i></a>                                                                    <input ng-if="doc.ChooseInput" type="file" ngf-select="UploadFile($files, doc.Title)" class="form-control" />                                                                    <a ng-if="!doc.ChooseInput" href="" ng-click="EnableInputField(doc)"><i class="fas fa-pencil-alt"></i></a>                                                                </span>                                                                <span>                                                                    <a ng-if="!doc.ChooseInput" href="" ng-click="RemoveUploadedFile(doc.Title)"><i class="fas fa-trash-alt text-danger"></i></a>                                                                </span>                                                            </div>                                                            <div ng-if="!doc.Url || doc.Url == ''">                                                                <label>{{doc.Title}}</label>                                                                <input type="file" ngf-select="UploadFile($files, doc.Title)" class="form-control" />                                                            </div>                                                        </div>                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-6 text-left mt-4">                                                        <div class="d-flex">                                                            <label>Educational Documents </label> <span><a href="" class="p-2" ng-click="AddEducationalDocRow($index)"><i class="fas fa-plus text-success font-12"></i></a></span>                                                        </div>                                                        <div ng-repeat="doc in User.EducationalDocs">                                                            <div class="d-flex">                                                                <a class="p-2" ng-if="doc.Url && doc.Url != ''" href="{{doc.Url}}" target="_blank">{{doc.SubTitle}}1</a>                                                                <input ng-if="!doc.Url || doc.Url == ''" type="file" ngf-select="UploadEducationalFile($files, 'Educational', $index)" class="form-control" />                                                                <span class="float-right p-2">                                                                    <a href="" ng-click="RemoveUploadedEducationalFile($index)"><i class="fas fa-trash-alt text-danger"></i></a>                                                                </span>                                                            </div>                                                        </div>                                                        <br />                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="form-group col-md-6 text-left">                                                        <div class="d-flex">                                                            <label>Certifications & Courses </label> <span><a href="" class="p-2" ng-click="AddCertificateRow($index)"><i class="fas fa-plus text-success font-12"></i></a></span>                                                        </div>                                                        <div ng-repeat="doc in User.Certificates">                                                            <div class="d-flex">                                                                <a class="p-2" ng-if="doc.Url && doc.Url != ''" href="{{doc.Url}}" target="_blank">{{doc.SubTitle}}1</a>                                                                <input ng-if="!doc.Url || doc.Url == ''" type="file" ngf-select="UploadCertificate($files, 'Certifications', $index)" class="form-control" />                                                                <span class="float-right p-2">                                                                    <a href="" ng-click="RemoveUploadedCertificate($index)"><i class="fas fa-trash-alt text-danger"></i></a>                                                                </span>                                                            </div>                                                        </div>                                                        <br />                                                    </div>                                                </div>                                                <div class="row">                                                    <div class="col-sm-12">                                                        <button type="button" class="btn btn-success float-right ml-3" ng-click="EditUser(User)">Edit User</button>                                                        <a href="/User/" title="Cancel" class="btn btn-danger float-right ">Cancel</a>                                                    </div>                                                </div>                                            </form>                                        </div>                                    </div>                                </div>                            </div>                        </div>                    </div>                </section>                <section id="section-tzoid-3"><p>3</p></section>                <section id="section-tzoid-4"><p>4</p></section>                <section id="section-tzoid-5"><p>5</p></section>            </div><!-- /content -->        </div><!-- /tabs -->    </section></div><script src="~/Content/js1/cbpFWTabs.js"></script><script>    (function () {        [].slice.call(document.querySelectorAll('.tabs')).forEach(function (el) {            new CBPFWTabs(el);        });    })();</script><style>    .required:after {        content: " *";        color: red;    }</style>