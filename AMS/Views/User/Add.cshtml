@{
    ViewBag.Title = "Add";
}
<div class="container-fluid" ng-controller="UserCtrl" ng-init="AddInit()">
    <h3 class="mt-4">Add User</h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="card z-depth-3">
                <div class="card-body">
                    <div class="tab-content p-3">
                        <div class="tab-pane active" id="edit">
                            <form class="p-3">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" ng-model="User.FirstName" />
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" ng-model="User.LastName" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Address</label>
                                        <input type="text" class="form-control" ng-model="User.Address" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Email</label>
                                        <input type="email" class="form-control" ng-model="User.Email" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label>Primary Contact</label>
                                        <input type="text" class="form-control" ng-model="User.Contact1" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Alternate Contact</label>
                                        <input type="text" class="form-control" ng-model="User.Contact2" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Remaining Leaves</label>
                                        <input type="number" class="form-control" min="0" max="30" value="30" onkeydown="return false" ng-model="User.RemainingLeaves" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Annual Leaves</label>
                                        <input type="number" class="form-control" min="0" max="20" value="20" onkeydown="return false" ng-model="User.AnnualLeaves" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Medical Leaves</label>
                                        <input type="number" class="form-control" min="0" max="10" value="10" onkeydown="return false" ng-model="User.MedicalLeaves" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="">
                                            <label>Department</label>
                                            <select ng-model="User.DepartmentId" class="form-control" ng-change="GetUsersByDepartmentId(User.DepartmentId)">
                                                <option selected value="">Select Department</option>
                                                <option ng-repeat="Department in Departments" ng-selected="Department.Id == User.DepartmentId" value="{{Department.Id}}">{{Department.Name}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="">
                                            <label>Shift</label>
                                            <select ng-model="User.ShiftId" class="form-control">
                                                @*ng-change="GetUsersByDepartmentId(User.DepartmentId)">*@
                                                <option selected value="">Select Shift</option>
                                                <option ng-repeat="Shift in ShiftsList" ng-selected="Shift.Id == User.ShiftId" value="{{Shift.Id}}">{{Shift.Name}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3" ng-if="User.HasSupervisor">
                                        <select ng-model="User.SupervisorId" class="form-control">
                                            <option selected value="">Select Supervisor</option>
                                            <option ng-repeat="Supervisor in Supervisors" value="{{Supervisor.Id}}">{{Supervisor.Name}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Has Supervisor</label>
                                        <input type="checkbox" class="" ng-model="User.HasSupervisor" ng-change="CheckForDepartment(User.DepartmentId)" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Password</label>
                                        <input type="password" class="form-control" ng-model="User.Password" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Confirm Password</label>
                                        <input type="password" class="form-control" ng-model="User.ConfirmPassword" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Profile Photo</label>
                                        <input type="file" accept="image/*" ngf-select="UploadUserImage($files,'ImageUrl')" class="form-control" />
                                    </div>
                                    @*<div class="form-group col-md-6">
                                        <img style="max-height: 413px;max-width:200px" src="{{User.ImageUrl}}" />
                                    </div>*@
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Resume</label>
                                        <input type="file" ngf-select="UploadFile($files, 'Resume')" class="form-control" />
                                    </div>
                                    <span>
                                        <a href="" ng-click="RemoveUploadedFile('Resume')"><i class="fas fa-trash-alt"></i></a>
                                    </span>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>CNIC front</label>
                                        <input type="file" ngf-select="UploadFile($files, 'CNIC front')" class="form-control" />
                                    </div>
                                    <span>
                                        <a href="" ng-click="RemoveUploadedFile('CNIC front')"><i class="fas fa-trash-alt"></i></a>
                                    </span>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>CNIC back</label>
                                        <input type="file" ngf-select="UploadFile($files, 'CNIC back')" class="form-control" />
                                    </div>
                                    <span>
                                        <a href="" ng-click="RemoveUploadedFile('CNIC back')"><i class="fas fa-trash-alt"></i></a>
                                    </span>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Appointment Letter</label>
                                        <input type="file" ngf-select="UploadFile($files, 'Appointment Letter')" class="form-control" />
                                    </div>
                                    <span>
                                        <a href="" ng-click="RemoveUploadedFile('Appointment Letter')"><i class="fas fa-trash-alt"></i></a>
                                    </span>
                                </div>
                                <div>
                                    <label>Educational Documents</label>
                                    <div class="col-md-9" ng-repeat="row in User.EductaionalDocs">
                                        <div class="row">
                                            <div class="form-group col-md-6">

                                                <input type="file" ngf-select="UploadEducationalFile($files, 'Educational', $index)" class="form-control" />
                                            </div>
                                            <span>
                                                <a href="" ng-click="RemoveUploadedEducationalFile($index)"><i class="fas fa-trash-alt"></i></a>
                                            </span>
                                        </div>
                                    </div>
                                    <button ng-click="AddEdcuationalDocRow()">Add Row</button>
                                </div>
                                <div>
                                    <label>Certifications & Courses</label>
                                    <div class="col-md-9" ng-repeat="row in User.Certificates">
                                        <div class="row">
                                            <div class="form-group col-md-6">

                                                <input type="file" ngf-select="UploadCertificate($files, 'Certifications', $index)" class="form-control" />
                                            </div>
                                            <span>
                                                <a href="" ng-click="RemoveUploadedCertificate($index)"><i class="fas fa-trash-alt"></i></a>
                                            </span>
                                        </div>
                                    </div>
                                    <button ng-click="AddCertificateRow()">Add Row</button>
                                </div>


                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-success float-right" ng-click="AddUser(User)">Add User</button>
                                        <a href="/User/" title="Cancel" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/CardStyle.css" rel="stylesheet" />