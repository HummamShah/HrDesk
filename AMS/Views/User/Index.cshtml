
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div class="container-fluid mt-4" ng-controller="UserCtrl" ng-init="initIndex()">
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            User List
            <a href="/User/Add" class="btn-sm btn-primary float-right" style="text-decoration-line:none; cursor:pointer;">
                Add <span><i class="fas fa-plus"></i></span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-md" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="overflow:hidden;">
                            <th>
                                ID <a href="" class="sort-icon" ng-click="SetSortingColoumn('Id')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            <th>
                                Name <a href="" class="sort-icon" ng-click="SetSortingColoumn('Name')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            <th>
                                Contact <a href="" class="sort-icon" ng-click="SetSortingColoumn('Contact')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            <th>
                                Email <a href="" class="sort-icon" ng-click="SetSortingColoumn('Email')"><i class="fas fa-arrow-up" ng-class="Sorting.AscClass"></i><i class="fas fa-arrow-down" ng-class="Sorting.DescClass"></i></a>
                            </th>
                            <th>
                                Job Description
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="User in filteredList  | orderBy:Sorting.Field:Sorting.IsAscending">
                            <td>
                                {{User.Id}}
                            </td>
                            <td>
                                {{User.Name}}
                            </td>
                            <td>
                                {{User.Contact1}}
                            </td>
                            <td>
                                {{User.Email}}
                            </td>
                            <td>
                                <a href="#" data-toggle="modal" ng-click="ShowUserJD(User.JobDescription , User.Id)" data-target="#showJD" title="Edit"><i class="fas fa-expand-alt ml-3"></i></a>
                            </td>
                            <td>
                                <a href="/User/Edit?Id={{User.Id}}" title="Edit"><i class="fas fa-pencil-alt ml-3"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* ========================================================= ADD HOLIDAY ================================================ *@
    <div class="modal fade" id="showJD">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Job Description</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="">
                        <label class="form-label">{{UserJD}}</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-outline-danger" ng-click="Terminate(Id)">Terminate</a>
                    <a href="#" class="btn btn-outline-primary" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>
