                                <option value="10" ng-selected="ListingOptions.PageSize == 10">10</option>
                                <option value="50" ng-selected="ListingOptions.PageSize == 50">50</option>
                                <option value="100" ng-selected="ListingOptions.PageSize == 100">100</option>
                            </select>
                        </span>
                    </div>*@
            </div>
        </div>
    </div>

    @* ========================================================= ADD HOLIDAY ================================================ *@
    <div class="modal fade" id="showJD">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Job Description</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="">
                        <label class="form-label">{{UserJD}}</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-outline-primary" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>
